<Page
    x:Class="Fallstudie.Pages.KundenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fallstudie.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Main, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <Border Background="#0091FF">
                    <TextBlock Text="Kundenauswahl" Padding="4" TextAlignment="Left" FontSize="25" Foreground="White"/>
                </Border>
                <Border Background="#45BAFF">
                    <TextBlock Text="Sie können zu jeden ausgewählten Kunden die konfigurierten Häuser drunter sehen." Padding="3" TextAlignment="Left" FontSize="15" Foreground="White"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Name" TextAlignment="Center" FontSize="20"/>
                        <ListView x:ConnectionId='8' Name="CustomerListCustomerPage" ItemsSource="{Binding ListCustomer}" 
                      SelectedItem="{Binding SelectedCustomerList, Mode=TwoWay}"
                      IsItemClickEnabled="False" SelectionMode="Single"    
                      IsSynchronizedWithCurrentItem="False" HorizontalAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" TextAlignment="Center" FontSize="20" Margin="5 0 0 0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Projekte" TextAlignment="Center" FontSize="20"/>
                        <ListView x:ConnectionId='7' Name="CustomerList2CustomerPage" ItemsSource="{Binding ListCustomer}" 
                      SelectedItem="{Binding SelectedCustomerList, Mode=TwoWay}"
                      IsItemClickEnabled="False" SelectionMode="Single"    
                      IsSynchronizedWithCurrentItem="False" HorizontalAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding NumbProjects}" Margin="25 0 0 0" FontSize="20"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Konfigurierte Häuser" FontSize="20" Margin="15 0 0 0"/>
                        <ListView x:ConnectionId='6' x:Name="CustomerList3CustomerPage" ItemsSource="{Binding ListCustomer}" 
                    	SelectedItem="{Binding SelectedCustomerList, Mode=TwoWay}"
                    	IsItemClickEnabled="False" SelectionMode="Single"    
                    	IsSynchronizedWithCurrentItem="False" HorizontalAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding NumbConfHouses}" Margin="80 0 0 0" FontSize="20"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                </StackPanel>

                <!--<Button Margin="20" Command="{Binding ButtonForwardChooseCustomer}" FontFamily="Segoe MDL2 Assets" FontSize="36" Content="&#xE0AB;" />-->
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel VerticalAlignment="Bottom" Opacity="0.85" >
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="{ThemeResource SystemAltHighColor}" Offset="0.5"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Konf. Haus ID" TextAlignment="Center" FontSize="18"/>
                    <ListView x:ConnectionId='5' Name="CustomerList1" ItemsSource="{Binding ListConfHouses}" 
                          SelectedItem="{Binding SelectedConfHouse, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="0 0 0 0" Text="{Binding Id}" FontSize="18" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>


                <StackPanel  Margin="0 0 0 0" Orientation="Vertical">
                    <TextBlock Text="Konf. Datum" TextAlignment="Center" FontSize="18"/>
                    <ListView x:ConnectionId='4' Name="EndDate1" ItemsSource="{Binding ListConfHouses}" 
                          SelectedItem="{Binding SelectedConfHouse, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="10 0 0 0" Text="{Binding ConfDate}" FontSize="18"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel  Margin="0 0 0 0" Orientation="Vertical">
                    <TextBlock Text="Kunde" TextAlignment="Center" FontSize="18"/>
                    <ListView x:ConnectionId='3' Name="CustomerName" ItemsSource="{Binding ListConfHouses}" 
                          SelectedItem="{Binding SelectedConfHouse, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="10 0 0 0" Text="{Binding Customer.Name}" FontSize="18"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel  Margin="0 0 0 0" Orientation="Vertical">
                    <TextBlock Text="Mitarbeiter" TextAlignment="Center" FontSize="18"/>
                    <ListView x:ConnectionId='2' Name="Customer" ItemsSource="{Binding ListConfHouses}" 
                          SelectedItem="{Binding SelectedConfHouse, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Margin="10 0 0 0" Text="{Binding Consultant.Name}" FontSize="18"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel  Margin="0 0 0 0" Orientation="Vertical">
                    <TextBlock Text="Package" TextAlignment="Center" FontSize="18"/>
                    <ListView x:ConnectionId='1' Name="StateConf" ItemsSource="{Binding ListConfHouses}" 
                          SelectedItem="{Binding SelectedConfHouse, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock TextAlignment="Center" Text="{Binding Package.Name}" FontSize="18"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>

        </StackPanel>
        
    </Grid>
    <Page.BottomAppBar>
        <CommandBar HorizontalContentAlignment="Left">
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton Visibility="{Binding PDFButtonVisibility}" Command="{Binding ButtonCreatePdf}" Label="PDF erstellen">
                <AppBarButton.Icon>
                    <BitmapIcon Margin="0 -10 0 -10" UriSource="ms-appx:///Assets/icons/pdf1.png"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton  Command="{Binding }" Icon="AddFriend" Label="Kunden anlegen"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

