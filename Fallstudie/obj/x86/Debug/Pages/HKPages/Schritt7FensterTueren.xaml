<Page
    x:Class="Fallstudie.Pages.HKPages.Schritt7FensterTueren"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fallstudie.Pages.HKPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Main, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="49*" />
                <RowDefinition Height="622*"/>
                <RowDefinition Height="622*"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="{Binding SelectedCustomerr.Lastname}"></TextBlock>
            </StackPanel>

            <!--Fenster-->
            <StackPanel x:ConnectionId='1' Grid.Row="1" Name="StackSchritt7_Fenster" Orientation="Vertical">
                <Border Background="#50BFB4">
                    <TextBlock Width="100" FontWeight="Bold" Text="Fenster"></TextBlock>
                </Border>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <ListView ItemsSource="{Binding ListWindows}" 
                          SelectedItem="{Binding SelectedWindow, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False"
                          Height="Auto"
                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Description}"></TextBlock>
                                    <Image Source="{Binding SourceImage}" Width="300" Height="200"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--Fenster Farben-->
                    <ListView ItemsSource="{Binding ListColorWindows}" 
                          SelectedItem="{Binding SelectedColorWindow, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False"
                          Height="Auto"
                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Rectangle Height="45" Width="45" Fill="{Binding Color}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>

            <!--Türen-->
            <StackPanel x:ConnectionId='2' Grid.Row="2" Name="StackSchritt5_Innenwand" Orientation="Vertical">
                <Border Background="#50BFB4">
                    <TextBlock Width="100" FontWeight="Bold" Text="Türen"></TextBlock>
                </Border>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <ListView ItemsSource="{Binding ListDoors}" 
                          SelectedItem="{Binding SelectedDoor, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False"
                          Height="Auto"
                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Description}"></TextBlock>
                                    <Image Source="{Binding SourceImage}" Width="300" Height="200"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--Farben-->
                    <ListView ItemsSource="{Binding ListColorDoors}" 
                          SelectedItem="{Binding SelectedColorDoor, Mode=TwoWay}"
                          IsItemClickEnabled="False" SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="False"
                          Height="Auto"
                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Rectangle Height="45" Width="45" Fill="{Binding Color}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <StackPanel>
                    <TextBlock Text="Fenster"/>
                    <TextBlock Text="{Binding SelectedWindow.Description, Mode=TwoWay}"/>
                    <TextBlock Text="{Binding SelectedColorWindow.Value, Mode=TwoWay}"/>
                    <TextBlock Text="{Binding SelectedWindow.Price, Mode=TwoWay}"/>

                    <TextBlock Text="Türen"/>
                    <TextBlock Text="{Binding SelectedDoor.Description, Mode=TwoWay}"/>
                    <TextBlock Text="{Binding SelectedColorDoor.Value, Mode=TwoWay}"/>
                    <TextBlock Text="{Binding SelectedDoor.Price, Mode=TwoWay}"/>

                    <TextBlock Text="{Binding TotalPrice}"/>

                    <Button Margin="20" Command="{Binding ButtonForwardChooseRoof}" FontFamily="Segoe MDL2 Assets" FontSize="36" Content="&#xE0AB;" />
                </StackPanel>

                <StackPanel >
                    <ProgressBar Height="26" Margin="10 0 10 10" Value="60"/>
                </StackPanel>
            </StackPanel>
            <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="667,125,-127,-41" Grid.Row="3" VerticalAlignment="Top" Width="100"/>

        </Grid>
    </ScrollViewer>
</Page>

